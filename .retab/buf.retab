

TOOLS_DIR = "tools"

GO_PACKAGE = "github.com/walteh/retab"

gen buf {
	// schema = "https://json.schemastore.org/buf.gen.json"
	path = "../buf.gen.yaml"
	data = {
		version = "v1"
		// managed = {}
		plugins = [
			{
				plugin = "buf.build/community/pseudomuto-doc:v1.5.1"
				out    = "./gen/buf/docs"
				opt    = ["json", "docs.json"]
			},
		]
	}
}

